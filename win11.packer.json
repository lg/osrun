{
  "builders": [
    {
      "type": "qemu",
      "output_directory": "output",
      "vnc_port_min": 5950,
      "vnc_port_max": 5950,

      "headless": true,
      "cpus": 32,
      "cpu_model": "host",
      "memory": 8192,
      "machine_type": "q35",
      "disk_size": "60G",
      "vga": "virtio",
      "qemuargs": [
        ["-cdrom", "virtio-win.iso"],
        ["-device", "qemu-xhci"],
        ["-device", "usb-tablet,bus=usb-bus.0"]
      ],

      "iso_url": "Win11_22H2_English_x64v2.iso",
      "iso_checksum": "none",
      "floppy_files": [
        "autounattend.xml",
        "configure.ps1",
        "first-boot.ps1"
      ],

      "communicator": "winrm",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "winrm_username": "Administrator",
      "winrm_password": "password",
      "winrm_use_ssl": "false",
      "winrm_insecure": "true",
      "winrm_timeout" : "2h"
    }
  ]
}